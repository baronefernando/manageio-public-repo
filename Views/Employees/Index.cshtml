@using System.Globalization

@model IEnumerable<ManageIO.Models.Employees>

@{
    ViewData["Title"] = "Home";
}

<link rel="stylesheet" href="css/site.css">
    
<body> 
    <h1 class="text-center">Employees</h1>
    <br />
    <form asp-action="Index" method="post">
        <label class="control-label">Search</label>
        <div class="form-group" style="display:flex; flex-direction:row;">
            <input id="search" name="s" type="text" class="form-control" style="width:25%;" placeholder="Type here to search..."/>
            <input type="submit" class="btn btn-primary" value="Find"/>
            <a asp-action="Create" class="btn btn-primary" style="margin-left:5px">Add Employee +</a></td>
        </div>
    </form>
    <br />
    <div class="text-center">
        @if (Model.Count() > 0)
        {
            <table>

                <tr>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Role</th>
                    <th></th>
                </tr>


                @foreach (var employees in Model)
                {
                    <tr>
                        <td>@employees.EmployeeID</td>
                        <td>@employees.FullName</td>
                        <td>@employees.RoleName</td>
                        <td><a asp-action="Details" class="btn btn-primary" asp-route-id="@employees.EmployeeID">VIEW</a></td>
                    </tr>
                }

            </table>
        }
        else
        {
            <p class="text-center">No employees found :(</p>
        }
    </div>
</body>