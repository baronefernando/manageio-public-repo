@model IEnumerable<ManageIO.Models.Roles>

@{
    ViewData["Title"] = "Index";
}

<h1 class="text-center">Roles</h1>
<body>
    <br />
    <form asp-action="Index" method="post">
        <label class="control-label">Search</label>
        <div class="form-group" style="display:flex; flex-direction:row;">
            <input id="search" name="s" type="text" class="form-control" style="width:25%;" placeholder="Type here to search..." />
            <input type="submit" class="btn btn-primary" value="Find" />
            <a asp-action="Create" class="btn btn-primary" style="margin-left:5px">Add Role +</a></td>
        </div>
    </form>
    <br />
    <div class="text-center">
        @if (Model.Count() > 0)
        {
            <table>
                <tr>
                    <th>ID</th>
                    <th>Role</th>
                    <th></th>
                </tr>
                @foreach (var roles in Model)
                {
                    <tr>
                        <td>@roles.RoleID</td>
                        <td>@roles.RoleName</td>
                        <td><a asp-action="Details" class="btn btn-primary" asp-route-id="@roles.RoleID">VIEW</a></td>
                    </tr>
                }
            </table>
        }
        else
        {
            <p class="text-center">No roles found :(</p>
        }
    </div>
</body>

